{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.ts","src/**/*.tsx", "src/**/*.vue", "src/types/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
